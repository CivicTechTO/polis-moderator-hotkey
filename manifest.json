{
  "manifest_version": 3,
  "name": "PolisFastMod",
  "description": "Chrome extension allow polis moderator to accept/reject comments with hotkeys",
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
   "content_scripts": [
     {
       "matches": ["https://pol.is/m/*"],
       "js": ["content-script.js"],
       "run_at": "document_start" // run before everything else, else there will be conflicts at pages which accept keyboard inputs ( eg:google search)
     }
   ],
  "action": {
    "default_popup": "popup.html",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
